{
  "openapi": "3.0.1",
  "info": {
    "title": "DocLens API",
    "description": "Document Q&A API - Upload PDFs and ask questions about their content",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:7071/api"
    }
  ],
  "paths": {
    "/documents/{documentId}/ask": {
      "post": {
        "tags": [
          "Documents"
        ],
        "operationId": "askQuestion",
        "parameters": [
          {
            "name": "documentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/askRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "SSE stream of answer chunks",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/documents/{documentId}/chat-sessions": {
      "get": {
        "tags": [
          "Chat"
        ],
        "summary": "Get chat sessions",
        "description": "Get all chat sessions for a document",
        "operationId": "getChatSessions",
        "parameters": [
          {
            "name": "documentId",
            "in": "path",
            "description": "Document ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of chat sessions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/chatSessionsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/chat-sessions/{sessionId}": {
      "get": {
        "tags": [
          "Chat"
        ],
        "summary": "Get chat history",
        "description": "Get the chat history for a specific session",
        "operationId": "getChatHistory",
        "parameters": [
          {
            "name": "sessionId",
            "in": "path",
            "description": "Session ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Chat history",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/chatHistoryResponse"
                }
              }
            }
          },
          "404": {
            "description": "Session not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/documents/upload-url": {
      "post": {
        "tags": [
          "Documents"
        ],
        "summary": "Get upload URL",
        "description": "Generate a SAS URL for direct PDF upload to Azure Blob Storage",
        "operationId": "getUploadUrl",
        "parameters": [
          {
            "name": "filename",
            "in": "query",
            "description": "Filename of the PDF to upload (must end with .pdf)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Upload URL and document metadata",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/uploadUrlResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid filename or file type",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/documents": {
      "get": {
        "tags": [
          "Documents"
        ],
        "summary": "List documents",
        "description": "List all uploaded documents",
        "operationId": "listDocuments",
        "responses": {
          "200": {
            "description": "List of documents",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/documentListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/documents/{documentId}": {
      "get": {
        "tags": [
          "Documents"
        ],
        "summary": "Get document",
        "description": "Get a document by ID",
        "operationId": "getDocument",
        "parameters": [
          {
            "name": "documentId",
            "in": "path",
            "description": "Document ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Document details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/documentInfo"
                }
              }
            }
          },
          "404": {
            "description": "Document not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Documents"
        ],
        "summary": "Delete document",
        "description": "Delete a document by ID",
        "operationId": "deleteDocument",
        "parameters": [
          {
            "name": "documentId",
            "in": "path",
            "description": "Document ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deletion confirmation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deleteDocumentResponse"
                }
              }
            }
          },
          "404": {
            "description": "Document not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/documents/{documentId}/download-url": {
      "get": {
        "tags": [
          "Documents"
        ],
        "summary": "Get download URL",
        "description": "Generate a SAS URL for downloading a PDF from Azure Blob Storage",
        "operationId": "getDownloadUrl",
        "parameters": [
          {
            "name": "documentId",
            "in": "path",
            "description": "Document ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Download URL and document metadata",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/downloadUrlResponse"
                }
              }
            }
          },
          "404": {
            "description": "Document not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": [
          "System"
        ],
        "summary": "Health check",
        "description": "Returns the health status of the API",
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Health status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/healthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/hello": {
      "get": {
        "tags": [
          "System"
        ],
        "summary": "Hello world",
        "description": "Returns a greeting message",
        "operationId": "sayHello",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Name to greet",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Greeting message",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/helloResponse"
                }
              }
            }
          }
        }
      }
    },
    "/documents/{documentId}/status": {
      "get": {
        "tags": [
          "Documents"
        ],
        "operationId": "getIndexingStatus",
        "parameters": [
          {
            "name": "documentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "SSE stream of indexing status",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "askRequest": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string"
          },
          "sessionId": {
            "type": "string"
          }
        }
      },
      "boundingBox": {
        "type": "object",
        "properties": {
          "x": {
            "type": "number",
            "format": "float"
          },
          "y": {
            "type": "number",
            "format": "float"
          },
          "width": {
            "type": "number",
            "format": "float"
          },
          "height": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "chatHistoryResponse": {
        "type": "object",
        "properties": {
          "sessionId": {
            "type": "string"
          },
          "documentId": {
            "type": "string"
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/chatMessageDto"
            }
          }
        }
      },
      "chatMessageDto": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "sources": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/sourceReference"
            }
          }
        }
      },
      "chatSessionsResponse": {
        "type": "object",
        "properties": {
          "sessions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/chatSessionSummary"
            }
          }
        }
      },
      "chatSessionSummary": {
        "type": "object",
        "properties": {
          "sessionId": {
            "type": "string"
          },
          "documentId": {
            "type": "string"
          },
          "messageCount": {
            "type": "integer",
            "format": "int32"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "deleteDocumentResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "documentId": {
            "type": "string"
          }
        }
      },
      "documentInfo": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string"
          },
          "filename": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          },
          "uploadedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "documentListResponse": {
        "type": "object",
        "properties": {
          "documents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/documentInfo"
            }
          }
        }
      },
      "downloadUrlResponse": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string"
          },
          "downloadUrl": {
            "type": "string"
          },
          "filename": {
            "type": "string"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "errorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "healthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "version": {
            "type": "string"
          }
        }
      },
      "helloResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "sourceReference": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "format": "int32"
          },
          "text": {
            "type": "string"
          },
          "positions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/textPosition"
            }
          },
          "relevanceScore": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "textPosition": {
        "type": "object",
        "properties": {
          "pageNumber": {
            "type": "integer",
            "format": "int32"
          },
          "boundingBox": {
            "$ref": "#/components/schemas/boundingBox"
          },
          "charOffset": {
            "type": "integer",
            "format": "int32"
          },
          "charLength": {
            "type": "integer",
            "format": "int32"
          },
          "pageWidth": {
            "type": "number",
            "format": "float",
            "nullable": true
          },
          "pageHeight": {
            "type": "number",
            "format": "float",
            "nullable": true
          }
        }
      },
      "uploadUrlResponse": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string"
          },
          "uploadUrl": {
            "type": "string"
          },
          "blobName": {
            "type": "string"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
